<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VehiculoEditActivity">

    <ViewFlipper
        android:id="@+id/imageEditSlider"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:flipInterval="2000"
        />
    <Button
        android:id="@+id/buttonPrevious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showEditPrevious"
        app:layout_constraintBaseline_toBottomOf="@id/imageEditSlider"
        app:layout_constraintStart_toStartOf="@id/imageEditSlider"
        android:text="Button"/>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showEditNext"
        app:layout_constraintBaseline_toBottomOf="@id/imageEditSlider"
        app:layout_constraintEnd_toEndOf="@id/imageEditSlider"
        android:text="Button" />

    <LinearLayout
        android:id="@+id/vehiculoEditLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintTop_toBottomOf="@id/imageEditSlider"
        android:background="#DAD8D8"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/imageEditSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/vehiculoLinearLayout"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="Marca"/>
        <EditText
            android:id="@+id/vehiculoMarcaEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:hint="Marca" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Linea"/>
        <EditText
            android:id="@+id/vehiculoLineaEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/vehiculoMarcaEdit"
            tools:hint="Linea"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Modelo"/>
        <EditText
            android:id="@+id/vehiculoModeloEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/vehiculoLineaEdit"
            tools:hint="Modelo"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Motor"/>
        <EditText
            android:id="@+id/vehiculoMotorEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/vehiculoModeloEdit"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:hint="Motor"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Transmision"/>
        <EditText
            android:id="@+id/vehiculoTransmisionEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/vehiculoMotorEdit"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:hint="Transmision"/>
        <Button
            android:id="@+id/vehiculoEditSubmit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="Editar"
            android:textSize="20sp"
            android:text="GUARDAR CAMBIOS"
            android:textColor="@color/black"
            app:cornerRadius="32dp" />
        <Button
            android:id="@+id/vehiculoDeleteSubmit"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:onClick="Delete"
            android:textSize="20sp"
            android:text="ELIMINAR VEHICULO"
            android:textColor="@color/black"
            app:cornerRadius="32dp" />
        <ImageView
            android:id="@+id/imageUpload"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:src="@drawable/autoselect"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>